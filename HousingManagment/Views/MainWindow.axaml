<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:HousingManagment.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="HousingManagment.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="HousingManagment">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>
    <TabControl x:Name="HousingControl">
        <TabItem Header="Housing type" x:DataType="vm:HousingTypeViewModel" x:Name="HousingTypeTabItem">
            <Grid>
                <DataGrid x:Name="HousingTypeGrid" 
                          AutoGenerateColumns="True" 
                          IsReadOnly="True"
                          ItemsSource="{Binding HousingType}"/>
            </Grid>
        </TabItem>
        <TabItem Header="Maintenance work" x:DataType="vm:MaintenanceWorkViewModel" x:Name="MaintenanceWorkTabItem">
            <Grid>
                <DataGrid x:Name="MaintenanceWorkGrid"
                          AutoGenerateColumns="True"
                          IsReadOnly="True"
                          ItemsSource="{Binding MaintenanceWork}"></DataGrid>
            </Grid>
        </TabItem>
    </TabControl>
</Window>
