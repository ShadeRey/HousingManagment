<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:HousingManagment.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="HousingManagment.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="HousingManagment">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>
    <TabControl x:Name="HousingControl">
        <TabItem Header="Housing type" >
            <Grid>
                <DataGrid
                          IsReadOnly="True" 
                          DataContext="{Binding  HousingTypeViewModel}"
                          ItemsSource="{Binding HousingType}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding ID}"/>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </TabItem>
        <TabItem Header="Maintenance work" >
            <Grid>
                <DataGrid
                          IsReadOnly="True" 
                          DataContext="{Binding MaintenanceWorkViewModel}"
                          ItemsSource="{Binding MaintenanceWork }">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding ID}"/>
                        <DataGridTextColumn Header="Description" Binding="{Binding Description}"/>
                        <DataGridTextColumn Header="Start date" Binding="{Binding StartDate, StringFormat=dd.MM.yyyy}"/>
                        <DataGridTextColumn Header="End date" Binding="{Binding EndDate, StringFormat=dd.MM.yyyy}"/>
                        <DataGridTextColumn Header="Price" Binding="{Binding Price, StringFormat={} {0}$}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </TabItem>
        <TabItem Header="Utility payment">
            <Grid>
                <DataGrid
                    IsReadOnly="True" 
                    DataContext="{Binding UtilityPaymentViewModel}"
                    ItemsSource="{Binding UtilityPayment }">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding ID}"/>
                        <DataGridTextColumn Header="Sum" Binding="{Binding Sum}"/>
                        <DataGridTextColumn Header="Payment date" Binding="{Binding PaymentDate, StringFormat=dd.MM.yyyy}"/>
                        <DataGridTextColumn Header="Payment method" Binding="{Binding PaymentMethod}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </TabItem>
        <TabItem Header="Infrastructure">
            <Grid>
                <DataGrid
                    IsReadOnly="True" 
                    DataContext="{Binding InfrastructureViewModel}"
                    ItemsSource="{Binding Infrastructure }">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding ID}"/>
                        <DataGridTextColumn Header="Type" Binding="{Binding Type}"/>
                        <DataGridTextColumn Header="State" Binding="{Binding State}"/>
                        <DataGridTextColumn Header="Work" Binding="{Binding Work}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </TabItem>
    </TabControl>
</Window>
